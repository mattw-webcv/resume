.grid-container {
  display: grid;
  grid-template-columns: 70px 70px 70px; /*Make the grid smaller than the container*/
  grid-template-rows: 8;
  gap: 10px;
  background-color: dodgerblue;
  padding: 10px;
  justify-content: space-evenly;
}

.grid-container > div {
